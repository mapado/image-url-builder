{
  "name": "mapado/image-url-builder",
  "description": "Generate a full url from an image slug",
  "type": "library",
  "autoload": {
    "psr-4": {
      "Mapado\\ImageUrlBuilder\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mapado\\ImageUrlBuilder\\Tests\\": "Tests/"
    }
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Julien Deniau",
      "email": "julien.deniau@gmail.com"
    }
  ],
  "require": {
    "php": "^7.2 || ^8.0"
  },
  "require-dev": {
    "mapado/php-cs-fixer-config": "^2.1",
    "phpunit/phpunit": "^10.3",
    "twig/twig": "^2.4 || ^3.0.5",
    "phpstan/phpstan": "^1.10",
    "phpstan/phpstan-phpunit": "^1.3",
    "phpstan/extension-installer": "^1.3"
  },
  "suggest": {
    "twig/twig": "For twig integration via the Mapado\\ImageUrlBuilder\\Twig\\UrlBuilderExtension extension"
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  }
}
